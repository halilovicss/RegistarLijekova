<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:background="#D6D6D6"
        app:layout_constraintBottom_toTopOf="@+id/color_medicine" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        >
        <View
            android:id="@+id/color_medicine"
            android:layout_width="@dimen/_7sdp"
            android:layout_height="@dimen/_40sdp"
            android:background="#FF0000"
            android:layout_marginBottom="@dimen/_5sdp"
 />
        <TextView
            android:id="@+id/txt_medicine_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toEndOf="@id/color_medicine"
            android:text="Ranital"
            style="@style/Title"
            android:layout_marginLeft="@dimen/_5sdp"/>
        <TextView
            android:id="@+id/txt_medicine_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_toEndOf="@id/color_medicine"
            android:layout_below="@id/txt_medicine_title"
            android:text="A07CBL - Krv i krvotvoreni organi"
            style="@style/Category"
            android:layout_marginLeft="@dimen/_5sdp"/>
<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/next"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"/>


    </RelativeLayout>

</LinearLayout>